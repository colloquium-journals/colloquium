# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/colloquium_dev"

# JWT
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Magic Links
MAGIC_LINK_SECRET="your-magic-link-secret-here"

# Email Configuration
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@colloquium.example.com"

# Redis (for background jobs)
REDIS_URL="redis://localhost:6379"

# App Configuration
NODE_ENV="development"
PORT=4000
FRONTEND_URL="http://localhost:3000"
API_URL="http://localhost:4000"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="50mb"

# ORCID OAuth (get credentials at https://orcid.org/developer-tools)
ORCID_CLIENT_ID=APP-XXXXXXXXXXXXXXXX
ORCID_CLIENT_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ORCID_REDIRECT_URI=http://localhost:4000/api/auth/orcid/callback
ORCID_BASE_URL=https://sandbox.orcid.org

# Bot Configuration
BOT_EXECUTION_TIMEOUT=30000
