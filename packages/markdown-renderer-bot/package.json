{
  "name": "@colloquium/markdown-renderer-bot",
  "version": "1.0.0",
  "description": "Markdown manuscript renderer with configurable journal templates for Colloquium",
  "main": "plugin.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "plugin.js",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && cp -r templates dist/",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "colloquium",
    "bot",
    "markdown",
    "renderer",
    "templates",
    "html",
    "pdf",
    "publishing"
  ],
  "author": "Colloquium Team",
  "license": "MIT",
  "dependencies": {
    "@colloquium/types": "*",
    "cors": "^2.8.5",
    "dompurify": "^3.0.8",
    "express": "^5.1.0",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "jsdom": "^22.1.0",
    "marked": "^9.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@colloquium/eslint-config": "*",
    "@types/fs-extra": "^11.0.2",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.3",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "colloquium": {
    "botId": "bot-markdown-renderer",
    "apiVersion": "1.0.0",
    "permissions": [
      "read_manuscript_files",
      "upload_files"
    ],
    "isDefault": true,
    "services": [
      {
        "name": "pandoc",
        "image": "colloquium/pandoc-service:1.0.0",
        "port": 8080,
        "healthCheck": "/health",
        "environment": {
          "NODE_ENV": "production",
          "PORT": "8080"
        },
        "resources": {
          "memory": "1Gi",
          "cpu": "1000m"
        },
        "volumes": [
          {
            "host": "./templates",
            "container": "/app/templates",
            "mode": "ro"
          }
        ]
      }
    ]
  }
}
