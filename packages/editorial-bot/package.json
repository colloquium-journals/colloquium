{
  "name": "@colloquium/editorial-bot",
  "version": "1.0.0",
  "description": "Editorial workflow management bot for Colloquium journals",
  "main": "plugin.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "plugin.js",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "colloquium",
    "bot",
    "editorial",
    "manuscript",
    "workflow",
    "publishing"
  ],
  "author": "Colloquium Team",
  "license": "MIT",
  "dependencies": {
    "@colloquium/types": "*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@colloquium/eslint-config": "*",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "colloquium": {
    "botId": "editorial-bot",
    "apiVersion": "1.0.0",
    "permissions": [
      "update_manuscript",
      "assign_reviewers",
      "send_notifications"
    ],
    "isDefault": true,
    "defaultConfig": {
      "autoStatusUpdates": true,
      "notifyAuthors": true,
      "reminderInterval": "7d"
    }
  }
}