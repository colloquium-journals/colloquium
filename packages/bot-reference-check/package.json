{
  "name": "@colloquium/bot-reference-check",
  "version": "1.0.0",
  "description": "DOI validation and reference checking bot for Colloquium journals",
  "main": "plugin.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "plugin.js",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "colloquium",
    "bot",
    "references",
    "citations",
    "doi",
    "crossref",
    "bibliography"
  ],
  "author": "Colloquium Team",
  "license": "MIT",
  "dependencies": {
    "@colloquium/types": "*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@colloquium/eslint-config": "*",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "colloquium": {
    "botId": "bot-reference-check",
    "apiVersion": "1.0.0",
    "permissions": [
      "read_manuscript_files",
      "access_external_apis"
    ],
    "isDefault": true
  }
}