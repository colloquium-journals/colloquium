{
  "name": "@colloquium/bot-reviewer-checklist",
  "version": "1.0.0",
  "description": "Interactive reviewer checklist bot for systematic manuscript evaluation",
  "main": "plugin.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "plugin.js",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch --preserveWatchOutput",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "colloquium",
    "bot",
    "reviewer",
    "checklist",
    "evaluation",
    "manuscript",
    "review"
  ],
  "author": "Colloquium Team",
  "license": "MIT",
  "dependencies": {
    "@colloquium/bot-sdk": "*",
    "@colloquium/types": "*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@colloquium/eslint-config": "*",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "colloquium": {
    "botId": "bot-reviewer-checklist",
    "apiVersion": "1.0.0",
    "botApiVersion": 1,
    "permissions": [
      "read_manuscript",
      "send_messages"
    ],
    "isDefault": true
  }
}