---
import Marketing from '../../layouts/Marketing.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Marketing title={`${post.data.title} - Colloquium`} description={post.data.description}>
  <article class="mx-auto max-w-3xl px-6 py-20">
    <header>
      <time class="text-sm text-gray-500" datetime={post.data.date}>
        {new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
      <h1 class="mt-2 text-4xl font-bold text-gray-900">{post.data.title}</h1>
      {post.data.author && <p class="mt-2 text-gray-600">By {post.data.author}</p>}
    </header>
    <div class="prose prose-gray mt-10 max-w-none">
      <Content />
    </div>
    <footer class="mt-12 border-t border-gray-200 pt-6">
      <a href={`${base}/blog`} class="text-sm text-accent-600 hover:underline">‚Üê Back to blog</a>
    </footer>
  </article>
</Marketing>
