---
import '../styles/custom.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Open-source scientific journal publishing with conversational review and bot automation.' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Colloquium" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <header class="border-b border-gray-200">
      <nav class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
        <a href={`${base}/`} class="text-xl font-bold text-gray-900">Colloquium</a>
        <div class="hidden items-center gap-8 md:flex">
          <a href={`${base}/features`} class="text-sm text-gray-600 hover:text-gray-900">Features</a>
          <a href={`${base}/getting-started/introduction`} class="text-sm text-gray-600 hover:text-gray-900">Documentation</a>
          <a href={`${base}/blog`} class="text-sm text-gray-600 hover:text-gray-900">Blog</a>
          <a href={`${base}/about`} class="text-sm text-gray-600 hover:text-gray-900">About</a>
          <a
            href="https://github.com/colloquium-journals/colloquium"
            class="text-sm text-gray-600 hover:text-gray-900"
            target="_blank"
            rel="noopener"
          >
            GitHub
          </a>
        </div>
        <a
          href={`${base}/getting-started/quick-start`}
          class="rounded-md bg-accent-600 px-4 py-2 text-sm font-medium text-white hover:bg-accent-600/90"
        >
          Get Started
        </a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="border-t border-gray-200 bg-gray-100">
      <div class="mx-auto max-w-6xl px-6 py-12">
        <div class="grid gap-8 md:grid-cols-4">
          <div>
            <h3 class="font-bold text-gray-900">Colloquium</h3>
            <p class="mt-2 text-sm text-gray-600">Open-source scientific journal publishing.</p>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-gray-900">Product</h4>
            <ul class="mt-2 space-y-1">
              <li><a href={`${base}/features`} class="text-sm text-gray-600 hover:text-gray-900">Features</a></li>
              <li><a href={`${base}/features/bots`} class="text-sm text-gray-600 hover:text-gray-900">Bot Ecosystem</a></li>
              <li><a href={`${base}/features/deployment`} class="text-sm text-gray-600 hover:text-gray-900">Deployment</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-gray-900">Resources</h4>
            <ul class="mt-2 space-y-1">
              <li><a href={`${base}/getting-started/introduction`} class="text-sm text-gray-600 hover:text-gray-900">Documentation</a></li>
              <li><a href={`${base}/bots/introduction`} class="text-sm text-gray-600 hover:text-gray-900">Bot Development</a></li>
              <li><a href={`${base}/blog`} class="text-sm text-gray-600 hover:text-gray-900">Blog</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-gray-900">Community</h4>
            <ul class="mt-2 space-y-1">
              <li><a href="https://github.com/colloquium-journals/colloquium" class="text-sm text-gray-600 hover:text-gray-900" target="_blank" rel="noopener">GitHub</a></li>
              <li><a href="https://github.com/colloquium-journals/colloquium/discussions" class="text-sm text-gray-600 hover:text-gray-900" target="_blank" rel="noopener">Discussions</a></li>
              <li><a href="https://github.com/colloquium-journals/colloquium/blob/main/CONTRIBUTING.md" class="text-sm text-gray-600 hover:text-gray-900" target="_blank" rel="noopener">Contributing</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-8 border-t border-gray-200 pt-8 text-center text-sm text-gray-500">
          MIT License. Built by academics, for academics.
        </div>
      </div>
    </footer>
  </body>
</html>
